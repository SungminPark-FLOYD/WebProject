script에서 html요소로 접근방법

id를 이용한 방법
var a = document.getElementById('id이름')
var a = document.querySelector('id이름')

class를 이용한 방법
var b = document.getElementsByClassName('class이름')
var b = document.getQuerySelectorAll('.class이름')

var b2 = document.queryselector('.class이름')
b2[0].innerHTML
b2[1].innerHTML

var b2 = document.querySelector('.class이름')
b2.innerHTML

name을 이용한 방법
c= document.getElementsByName('name이름');
c[0].
c[1].

tag이름을 이용한 방법
d= document.getElemnetsByTagName('tag이름')
d= document.querySelectorAll('tag이름')

d2= document.querySelector('tag이름')

//요소의 값 가져오기
a.value - input요소, select/option, textarea
b1[0].innerHTML, - div, p, span, td, label a h1,h2, b strong em mark
d2.dinnerText - div, p, span, td, label a h1,h2, b strong em mark
//요소에 결과값을 출력하기
a.value = "h1"; - input요소, select / option, textarea
b1[0].innerHTML = "<a>asd<br>네이버</a>"
b1[1].innerHTML = "<a>asd<br>네이버</a>"


